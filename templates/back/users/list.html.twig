{% extends 'base.html.twig' %}

{% block title %}AllinOne - Listing des utilisateurs{% endblock %}

{% block body %}

<h2>Liste des utilisateurs</h2>
<div class="d-flex justify-content-end">
  <a class="btn btn-primary" href="{{ path('backoffice_users_add') }}">Ajouter</a>
</div>
  <table class="table table-hover mt-4">
  <thead>
      <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Pseudonyme</th>
          <th scope="col">Roles</th>
          <th scope="col"></th>
      </tr>
  </thead>
<tbody>
  {% for user in users %}
      <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.email }}</td>
      <td>{{ user.username }}</td>
      <td>
          {% for role in user.roles %}
              {{ role }}{% if not loop.last %}, {% endif %}
          {% endfor %}
      </td>
      <td class="text-end">
          <a href="{{ path('backoffice_users_update', {"id": user.id}) }}" class="btn btn-sm btn-warning">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Modifier
          </a>
          <a href="{{ path('backoffice_users_delete', {"id": user.id}) }}" class="btn btn-sm btn-danger mediaDelete">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Supprimer
          </a>
      </td>
      </td>
  </tr>
  {% endfor %}
  </tbody>
</table>        

{% endblock %}